.lem-button-group {
    display: inline-flex
    margin: 0
    padding: 0

    &>.lem-button:not(:last-child){
        border-top-right-radius: 0
        border-bottom-right-radius: 0
        }
    &>.lem-button:not(:first-child){
        border-top-left-radius: 0
        border-bottom-left-radius: 0
        border-left:none
        }
    &>.lem-dropdown:not(:last-child){
         &>.lem-button {
            border-top-right-radius: 0
            border-bottom-right-radius: 0
         }
        }
    &>.lem-dropdown:not(:first-child){
        &>.lem-button {
            border-top-left-radius: 0
            border-bottom-left-radius: 0
            border-left:none
        }
        }

}

.lem-button-group--fullWidth {
    display: flex
    flex-direction: row
    align-items:stretch
    flex-basis: 100%
    &>.lem-button {
        flex: 1
    }
    }